{% extends 'base.html.twig' %}

{% block title %}Genre{% endblock %}

{% block body %}
    <h1>Genre</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ genre.id }}</td>
            </tr>
            <tr>
                <th>Libelle</th>
                <td>{{ genre.libelle }}</td>
            </tr>
            <tr>
                <th>MotsCles</th>
                <td>{{ genre.motsCles }}</td>
            </tr>
            <tr>
            <th>Livres</th>
            <td><table class="table table-bordered table-striped">
                <tr>
                    <th>ID</th>
                    <th>Titre</th>
                    <td>Couverture</td>
                </tr>
                {% for livre in genre.livres %}
                <tr>
                    <th>{{ livre.id }}</th>
                    <th>{{ livre.titre }}</th>
                    <td>{{ livre.couverture }}</td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="3">Aucun livre</td>
                </tr>

                {% endfor %}
            </table></td>



            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_genre_index') }}">back to list</a>

    <a href="{{ path('app_admin_genre_edit', {'id': genre.id}) }}">edit</a>

    {{ include('admin/genre/_delete_form.html.twig') }}
{% endblock %}
