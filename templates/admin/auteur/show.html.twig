{% extends 'base.html.twig' %}

{% block title %}Auteur{% endblock %}

{% block body %}
    <h1>Auteur</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ auteur.id }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ auteur.prenom }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ auteur.nom }}</td>
            </tr>
            <tr>
                <th>Biographie</th>
                <td>{{ auteur.biographie }}</td>
            </tr>
            <tr>
                <th>Naissance</th>
                <td>{{ auteur.naissance ? auteur.naissance|date('d/m/Y') : '' }}</td>
            </tr>
            <tr>
                <th>Deces</th>
                <td>{{ auteur.deces ? auteur.deces|date('d/m/Y') : '' }}</td>
            </tr>
            <tr>
                <th>Livres</th>
                <td><table class="table table-bordered table-striped">
                    <tr>
                        <th>ID</th>
                        <th>Titre</th>
                        <td>Couverture</td>
                    </tr>
                    {% for livre in auteur.livres %}
                    <tr>
                        <th>{{ livre.id }}</th>
                        <th>{{ livre.titre }}</th>
                        <td>{{ livre.couverture }}</td>
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="3">Aucun livre</td>
                    </tr>

                    {% endfor %}
                </table></td>
        </tr>
        </tbody>
    </table>

    <div class="d-flex justify-content-between">

        <a href="{{ path('app_admin_auteur_index') }}" class="btn btn-secondary">Retour Ã  la liste</a>

        <a href="{{ path('app_admin_auteur_edit', {'id': auteur.id}) }}"><i class="fa fa-edit"></i> Modifier</a>

        {{ include('admin/auteur/_delete_form.html.twig') }}

    </div>
{% endblock %}
