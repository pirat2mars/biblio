{% extends 'base.html.twig' %}

{% block title %}Auteur index{% endblock %}

{% block body %}
    <h1>Auteur index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Prenom Nom</th>
                <th>Nb de livres</th>
                <th>Biographie</th>
                <th>Naissance</th>
                <th>Deces</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for auteur in auteurs %}
            <tr>
                <td>{{ auteur.id }}</td>
                <td>{{ auteur.identite }}</td>
                <td>{{ auteur.livres|length }}</td>
                <td>{{ auteur.biographie }}</td>
                <td>{{ auteur.naissance ? auteur.naissance|date('Y-m-d') : '' }}</td>
                <td>{{ auteur.deces ? auteur.deces|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_admin_auteur_show', {'id': auteur.id}) }}">show</a>
                    <a href="{{ path('app_admin_auteur_edit', {'id': auteur.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_auteur_new') }}">Create new</a>
{% endblock %}
