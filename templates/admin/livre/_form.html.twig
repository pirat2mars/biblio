{{ form_start(form) }}
    <div class="row">
    {{ form_row(form.titre,{
        "row_attr" : {class : "col"}
    }) }}
    {{ form_row(form.auteur,{
        row_attr : {class : "col"}
    }) }}
    </div>
    {#
    {{ form_row(form.couverture,{
        attr : {class: 'bg-secondary'}    
    }) }}  
    #}
    
    <div->
        <div class="d-flex">
            {{ form_label(form.couverture) }}
            {% if form.vars.value.couverture %}         
                <img src="{{ asset('images/' ~ livre.couverture ) }}" alt="couverture de {{ livre.titre }}" title="{{ livre.titre }}" class="miniature">
            {% endif %}
        </div>
        {{ form_widget(form.couverture) }}
        {{ form_help(form.couverture) }}
        {{ form_errors(form.couverture) }}
    </div->


    {{ form_row(form.resume) }}
    {{ form_row(form.genres) }}
        <div class="d-flex justify-content-between">
            <button class="btn btn-primary">
                <i class="fa fa-save"></i> {{ button_label|default('Enregistrer')}}
            </button>
            <button class="btn btn-warning">
                <i class="fa faeraser"></i> Effacer
            </button>
            <a href="{{ path('app_admin_livre_index')}}" class="btn btn-danger">
            <i class="fa fa-reply"></i> Annuler
            </a>
        </div>
{{ form_end(form) }}

