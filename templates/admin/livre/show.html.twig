{% extends 'base.html.twig' %}

{% block title %}Livre{% endblock %}

{% block body %}
    <h1>Livre</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ livre.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ livre.titre }}</td>
            </tr>
            <tr>
                <th>Résumé</th>
                <td>{{ livre.resume }}</td>
            </tr>
            <tr>
                <th>Couverture</th>
                <td>{{ livre.couverture }}</td>
            </tr>
            <tr>
                <th>
                Genres
                </th>
                <td>
                {% for genre in livre.genres %}
                {{ genre.libelle }} {% if not loop.last %}  , {% endif %}
                {% endfor %}
                </td>
            </tr>

        </tbody>
    </table>

    <a href="{{ path('app_admin_livre_index') }}">back to list</a>

    <a href="{{ path('app_admin_livre_edit', {'id': livre.id}) }}">edit</a>

    {{ include('admin/livre/_delete_form.html.twig') }}
{% endblock %}
